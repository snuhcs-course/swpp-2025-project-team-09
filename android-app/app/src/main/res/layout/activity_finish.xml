<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/finishMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.session.finish.FinishActivity">

    <!-- Congratulations title -->
    <TextView
        android:id="@+id/congText"
        style="@style/text80pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/congratulations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Balloon result text -->
    <TextView
        android:id="@+id/balloonResultText"
        style="@style/text64pt"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/congText" />

    <!-- Balloon interaction view -->
    <com.example.storybridge_android.ui.session.finish.FinishBalloonView
        android:id="@+id/balloonView"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balloonResultText" />

    <!-- Amazing text -->
    <TextView
        android:id="@+id/amazingText"
        style="@style/text64pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/amazing"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/balloonView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Tap balloon hint -->
    <TextView
        android:id="@+id/tapBalloonHint"
        style="@style/text64pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/tap_balloons"
        app:layout_constraintTop_toBottomOf="@id/balloonView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- Next button -->
    <android.widget.Button
        android:id="@+id/mainButton"
        style="@style/text64pt"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/grad_button"
        android:backgroundTint="@color/white"
        android:elevation="8dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:translationZ="8dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/amazingText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Learned words title -->
    <TextView
        style="@style/text48pt"
        android:id="@+id/learnedWordsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap_words"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/balloonView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Learned words container -->
    <LinearLayout
        android:id="@+id/learnedWordsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/learnedWordsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.example.storybridge_android.ui.session.finish.FlipCardView
            android:id="@+id/card1"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginEnd="24dp" />
        <com.example.storybridge_android.ui.session.finish.FlipCardView
            android:id="@+id/card2"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp" />
        <com.example.storybridge_android.ui.session.finish.FlipCardView
            android:id="@+id/card3"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginStart="24dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

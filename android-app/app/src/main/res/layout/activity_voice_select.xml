<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:paddingStart="160dp"
    android:paddingEnd="160dp">

    <!-- Title: What's your preferred voice? -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Whatâ€™s your preferred voice?"
        style="@style/BoldText64"
        app:layout_constraintBottom_toTopOf="@id/manButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <!-- Man Button -->
    <android.widget.Button
        android:id="@+id/manButton"
        style="@style/BoldText64"
        android:layout_width="480dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button"
        android:text="man"
        app:layout_constraintBottom_toTopOf="@id/womanButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <!-- Woman Button -->
    <android.widget.Button
        android:id="@+id/womanButton"
        style="@style/BoldText64"
        android:layout_width="480dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:text="woman"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/manButton" />

</androidx.constraintlayout.widget.ConstraintLayout>

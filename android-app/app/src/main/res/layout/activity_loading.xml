<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loadingMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.session.LoadingActivity">

    <!-- Loading title text -->
    <TextView
        android:id="@+id/loadingTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="Loading..."
        style="@style/text80pt"
        app:layout_constraintBottom_toTopOf="@id/loadingBarContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Progress bar container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/loadingBarContainer"
        android:layout_width="560dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="60dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/loadingTitleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Progress bar -->
        <ProgressBar
            android:id="@+id/loadingBar"
            android:layout_width="560dp"
            android:layout_height="120dp"
            android:elevation="8dp"
            android:translationZ="8dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_drawable"
            style="?android:attr/progressBarStyleHorizontal" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

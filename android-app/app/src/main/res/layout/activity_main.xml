<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- TopNavigationBar 추가 -->
    <com.example.storybridge_android.ui.TopNavigationBar
        android:id="@+id/topNavigationBar"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topNavigationBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="36dp"
        android:paddingEnd="36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Previous Readings -->
            <TextView
                android:id="@+id/previousReadingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous Readings"
                style="@style/BoldText48"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"/>

            <!-- 카드 컨테이너 -->
            <!-- 카드 컨테이너 -->
            <LinearLayout
                android:id="@+id/cardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <!-- 카드 행 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="32dp">

                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"
                        android:layout_marginEnd="32dp"/>
                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"
                        android:layout_marginEnd="32dp"/>
                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"/>
                </LinearLayout>

                <!-- 카드 행 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="32dp">

                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"
                        android:layout_marginEnd="32dp"/>
                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"
                        android:layout_marginEnd="32dp"/>
                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"/>
                </LinearLayout>

                <!-- 카드 행 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="32dp">

                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"
                        android:layout_marginEnd="32dp"/>
                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"
                        android:layout_marginEnd="32dp"/>
                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"/>
                </LinearLayout>

                <!-- 카드 행 4 (마지막 1개) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:layout_marginBottom="16dp">

                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"
                         android:layout_marginStart="32dp"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
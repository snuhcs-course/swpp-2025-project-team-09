<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 고정 헤더 영역 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topNav"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/gray_light"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 헤더의 내부 요소 1: 앱 이름 -->
        <TextView
            android:id="@+id/appNameTextView"
            style="@style/BoldText48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Story Bridge"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 헤더의 내부 요소 2: 설정 아이콘 -->
        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            android:background="@drawable/circle_gray"
            android:src="@drawable/ic_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topNav"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="36dp"
        android:paddingEnd="36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Previous Readings -->
            <TextView
                android:id="@+id/previousReadingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous Readings"
                style="@style/BoldText48"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"/>

            <!-- 카드 컨테이너 -->
            <!-- 카드 컨테이너 -->
            <LinearLayout
                android:id="@+id/cardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <!-- 카드 행 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="32dp">

                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"
                        android:layout_marginEnd="32dp"/>
                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"
                        android:layout_marginEnd="32dp"/>
                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"/>
                </LinearLayout>

                <!-- 카드 행 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="32dp">

                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"
                        android:layout_marginEnd="32dp"/>
                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"
                        android:layout_marginEnd="32dp"/>
                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"/>
                </LinearLayout>

                <!-- 카드 행 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="32dp">

                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"
                        android:layout_marginEnd="32dp"/>
                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"
                        android:layout_marginEnd="32dp"/>
                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"/>
                </LinearLayout>

                <!-- 카드 행 4 (마지막 1개) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:layout_marginBottom="16dp">

                    <include
                        layout="@layout/card_item"
                        android:layout_width="200dp"
                        android:layout_height="360dp"
                         android:layout_marginStart="32dp"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <!-- Start New Reading 버튼 (항상 고정) -->
    <android.widget.Button
        android:id="@+id/startNewReadingButton"
        android:layout_width="560dp"
        android:layout_height="120dp"
        android:text="Start New Reading"
        android:background="@drawable/round_button"
        style="@style/BoldText48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
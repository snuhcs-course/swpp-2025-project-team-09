<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.main.MainActivity">

    <com.example.storybridge_android.ui.common.TopNavigationBar
        android:id="@+id/topNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topNavigationBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="400dp">

            <TextView
                android:id="@+id/previousReadingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/previous_readings"
                style="@style/text64pt"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/cardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:flexWrap="wrap"
                app:justifyContent="center"
                app:alignItems="flex_start"
                android:paddingStart="24dp"
                android:paddingEnd="16dp"
                android:paddingBottom="24dp"
                app:dividerDrawable="@drawable/spacing_divider"
                app:showDivider="middle"
                app:showDividerHorizontal="middle"
                app:showDividerVertical="middle" />

            <LinearLayout
                android:id="@+id/emptyContainer"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:visibility="gone"
                tools:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_previous_readings"
                    android:textSize="18sp"
                    android:textColor="@color/gray_400"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <android.widget.Button
        android:id="@+id/startNewReadingButton"
        android:layout_width="560dp"
        android:layout_height="120dp"
        android:text="@string/start_new_reading"
        android:background="@drawable/grad_button"
        style="@style/text64pt"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tutorialMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.landing.TutorialActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/startButton" />

        <android.widget.Button
            android:id="@+id/nextButton"
            style="@style/text40pt"
            android:layout_width="320dp"
            android:layout_height="64dp"
            android:layout_marginTop="72dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/white_button"
            android:elevation="8dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:translationZ="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/indicatorLayout" />

        <android.widget.Button
            android:id="@+id/startButton"
            style="@style/text40pt"
            android:layout_width="320dp"
            android:layout_height="64dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/white_button"
            android:elevation="8dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="@string/tutorial_start"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:translationZ="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/indicatorLayout" />

        <LinearLayout
            android:id="@+id/indicatorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_dark" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_gray" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_gray" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_gray" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_gray" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_gray" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_gray" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_gray" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_gray" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_gray" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/exitPanelInclude"
        layout="@layout/exit_confirm_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
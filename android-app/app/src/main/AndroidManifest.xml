<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permissions -->
    <uses-permission
        android:name="com.example.unwanted.PERMISSION"
        tools:node="remove" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Features -->
    <uses-feature android:name="android.hardware.camera.any" />
    <!-- ðŸ”¹ Add these camera features for better compatibility -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:name=".StoryBridgeApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_icon"
        android:label="@string/story_bridge"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Storybridgeandroid">

        <!-- ðŸ”¹ CRITICAL: ML Kit document scanner metadata -->
        <!-- This tells Google Play Services to download the ML Kit module -->
        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="document_scanner" />

        <activity
            android:name=".ui.session.StartSessionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.session.LoadingActivity"
            android:exported="false" />
        <!-- Launcher Activity -->
        <activity
            android:name=".ui.landing.LandingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Other Activities (Consider alphabetical or flow order) -->
        <activity
            android:name=".ui.camera.CameraActivity"
            android:exported="false" />
        <activity
            android:name=".ui.camera.CameraSessionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.session.DecideSaveActivity"
            android:exported="false" />
        <activity
            android:name=".ui.session.FinishActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.reading.ReadingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.session.VoiceSelectActivity"
            android:exported="false" />
        <activity
            android:name=".ui.session.ContentInstructionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.setting.SettingActivity"
            android:exported="false" />
    </application>

</manifest>